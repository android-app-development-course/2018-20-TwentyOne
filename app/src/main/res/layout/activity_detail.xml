<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.testing.tone.Detail"
    android:background="@drawable/blank">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableRow">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#fdd58f"
            android:background="@drawable/ic_query_builder_24dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/history" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:text="  TOne"
            android:id="@+id/textView"
            android:layout_weight="0.92"
            android:textIsSelectable="true"
            android:textSize="25dp"
            android:editable="false"
            android:textStyle="bold"
            android:password="false"
            android:textColor="#38c3f2"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/create"
            android:background="@drawable/ic_add_circle_outline_24dp"
            android:textColor="#2e90f3"
            android:layout_marginTop="3dp"
            android:layout_gravity="right" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 新建第一个项目"
        android:id="@+id/create1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_btn"
        android:textColor="#ffffff"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/tableRow" />

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv"
        android:layout_below="@+id/tableRow"
        android:layout_above="@+id/relativeLayout">

    </com.baoyz.swipemenulistview.SwipeMenuListView>



</RelativeLayout>
